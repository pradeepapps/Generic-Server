{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": false,
    "sourceMap": false,
    "declaration": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "target": "es6",
    "outDir": "./dist",
    "baseUrl": "./src",
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictNullChecks": false,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "docs"
  ]
}